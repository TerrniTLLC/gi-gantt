{
  "name": "@vue-gigantt/module",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "A simple and customizable Gantt chart component for Vue.js",
  "main": "./lib/vue-gigantt.umd.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/TerrniTLLC/gi-gantt"
  },
  "keywords": [
    "vue3",
    "vue",
    "vuejs",
	"gantt",
	"headless",
	"tailwindcss"
  ],
  "peerDependencies": {
	"@vueuse/core": "^10.9.0",
    "dayjs": "^1.11.10",
    "vue": "^3.4.21"
  },
  "module": "./lib/vue-gigantt.es.js",
  "types": "./lib_types/types/index.d.ts",
  "author": "Terrnit (@terrnit)",
  "exports": {
    ".": {
      "import": "./lib/vue-gigantt.es.js",
      "types": "./lib_types/vue-gigantt.d.ts",
      "require": "./lib/vue-gigantt.umd.js"
    },
	"./dist/style.css": {
		"import": "./lib/style.css",
		"require": "./lib/style.css"
	  }
  },
  "files": [
    "lib_types",
    "lib/vue-gigantt.js",
    "lib/vue-gigantt.umd.cjs"
  ],
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "build-only": "vite build",
    "build": "run-p build:types build:lib",
    "build:lib": "vite build",
    "build:types": "vue-tsc --declaration --emitDeclarationOnly --outDir lib_types",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "@vueuse/core": "^10.9.0",
    "dayjs": "^1.11.10",
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@types/node": "^20.11.25",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.18",
    "class-variance-authority": "^0.7.0",
    "csstype": "^3.1.3",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-vue": "^9.23.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.35",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.4.2",
    "vite": "^5.1.5",
    "vue-tsc": "^2.0.6"
  }
}
